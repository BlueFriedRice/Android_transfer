<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Card.CardRegistration">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_below="@+id/backBtn"
        android:id="@+id/register_Applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/seoul_icon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/updatetext"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카드 정보 수정"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/register_Applogo"
        android:fontFamily="@font/hoonddukbokki"
        />

    <TextView
        android:id="@+id/nfcID"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatetext"
        android:text="ID"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/hoonddukbokki"

        />

    <EditText
        android:id="@+id/update_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/nfcID"
        android:hint="이름"
        android:fontFamily="@font/hoonddukbokki"

        android:inputType="text"
        android:textColor="@color/borderdark"
        android:textColorHint="@color/borderdark"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/update_phone_number_input"
        android:layout_below="@+id/update_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="핸드폰 번호"
        android:fontFamily="@font/hoonddukbokki"

        android:inputType="number"
        android:textColor="@color/borderdark"
        android:textColorHint="@color/borderdark"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/update_cardnickname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_phone_number_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:hint="카드별명"
        android:fontFamily="@font/hoonddukbokki"
        android:textColor="@color/borderdark"
        android:textColorHint="@color/borderdark"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/update_btn"
        android:layout_below="@+id/update_cardnickname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:text="UPDATE"
        android:fontFamily="@font/hoonddukbokki"

        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_below="@+id/update_btn"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/seoul"/>
    </LinearLayout>


</RelativeLayout>