<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recentli"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/recent_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:background="@drawable/linearborder_lrb"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="삭제"
                android:fontFamily="@font/hoonddukbokki"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/linearborder_lrb"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="구분"
                android:fontFamily="@font/hoonddukbokki"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/linearborder_lrb"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="하차시간"
                android:fontFamily="@font/hoonddukbokki"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/linearborder_lrb"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="환승가능시간"
                android:fontFamily="@font/hoonddukbokki"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/linearborder_lrb"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="시간알림"
                android:fontFamily="@font/hoonddukbokki"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:context="com.example.transfer.Fragment.recentFragment"
        tools:listitem="@layout/recent_listitem">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>